{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false, // Disable strict mode
    "noEmitOnError": false, // Allow emitting files even if there are errors
    "skipLibCheck": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}